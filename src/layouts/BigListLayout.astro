---
import Underline from "../components/Underline.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
	<article class="blog">
		<div class="magic-grid">
			<h1>{frontmatter.title}</h1>
			<Underline />
		</div>
		<div class="magic-grid main-content">
			<slot />
		</div>
	</article>
</BaseLayout>

<style>
	html.dark a {
		color: var(--bright);
	}
</style>

<style is:global>
	summary + h3 {
		margin-top: 1rem;
	}

	h2 {
		margin-bottom: 2rem;
	}

	h3 {
		margin-bottom: 0.5rem;
	}

	.main-content {
		margin-top: 2rem;
	}

	.magic-grid > * {
		grid-column: 2;
	}

	.magic-grid figure {
		width: 100%;
		grid-column: 1 / 4;
		text-align: center;
	}

	.blog {
		margin-bottom: 4rem;
	}

	.blog blockquote p {
		margin-bottom: 0;
	}

	.blog h1 {
		margin-top: 4rem;
		margin-bottom: 0.5rem;
		font-size: 2rem;
	}

	.blog p {
		margin-bottom: 1.5rem;
	}

	.blog figure {
		margin: 0 0 2.5rem 0;
	}

	@media (min-width: 767px) {
		.blog h1 {
			font-size: 2.5rem;
		}

		.blog p {
			margin-bottom: 2rem;
		}
	}
</style>
