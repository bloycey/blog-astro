---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
	<article class="blog">
		<div class="magic-grid">
			<h1>{frontmatter.title}</h1>
			<svg
				width="959"
				height="96"
				viewBox="0 0 959 96"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					d="M5 10.859C120.167 -4.30764 399.52 14.3542 481 17.859C571 21.7304 921.5 11.2304 812.5 28.859C691.571 48.4168 557.5 37.359 624.5 49.859C691.5 62.359 794.5 49.859 840.5 49.859C877.3 49.859 939.667 81.7931 954 90.6264"
					stroke="#D43B57"
					stroke-width="10"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
		</div>
		<div class="magic-grid main-content">
			<slot />
		</div>
	</article>
</BaseLayout>

<style>
	html.dark a {
		color: var(--bright);
	}
</style>

<style is:global>
	html.dark svg path {
		stroke: var(--bright);
	}
	summary + h3 {
		margin-top: 1rem;
	}

	h2 {
		margin-bottom: 2rem;
	}

	h3 {
		margin-bottom: 0.5rem;
	}

	.main-content {
		margin-top: 2rem;
	}

	.magic-grid > * {
		grid-column: 2;
	}

	.magic-grid figure {
		width: 100%;
		grid-column: 1 / 4;
		text-align: center;
	}

	.blog {
		margin-bottom: 4rem;
	}

	.blog blockquote p {
		margin-bottom: 0;
	}

	.blog h1 {
		margin-top: 4rem;
		margin-bottom: 0.5rem;
		font-size: 2rem;
	}

	.blog p {
		margin-bottom: 1.5rem;
	}

	.blog figure {
		margin: 0 0 2.5rem 0;
	}

	@media (min-width: 767px) {
		.blog h1 {
			font-size: 2.5rem;
		}

		.blog p {
			margin-bottom: 2rem;
		}
	}
</style>
