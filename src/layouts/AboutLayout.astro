---
import BaseLayout from "./BaseLayout.astro";
import underline from "../images/underline.svg";
import andrew from "../images/andrew.jpeg";
import globe from "../images/globe.svg";
import linkedIn from "../images/linkedin.svg";
import github from "../images/github.svg";
import mail from "../images/mail.svg";
import twitter from "../images/twitter.svg";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
	<div class="magic-grid">
		<h1>{frontmatter.title}</h1>
		<svg
			width="959"
			height="96"
			viewBox="0 0 959 96"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path
				d="M5 10.859C120.167 -4.30764 399.52 14.3542 481 17.859C571 21.7304 921.5 11.2304 812.5 28.859C691.571 48.4168 557.5 37.359 624.5 49.859C691.5 62.359 794.5 49.859 840.5 49.859C877.3 49.859 939.667 81.7931 954 90.6264"
				stroke="#D43B57"
				stroke-width="10"
				stroke-linecap="round"
				stroke-linejoin="round"></path>
		</svg>
	</div>
	<div class="magic-grid">
		<div class="about-wrapper">
			<div class="content">
				<slot />
			</div>
			<aside>
				<div class="about-header">
					<img
						src={andrew}
						alt="Andrew Bloyce portrait"
						class="portrait"
					/>
				</div>
				<div class="about-info">
					<ul>
						<li>
							<a href="https://github.com/bloycey">
								<img src={github} alt="github logo" />
								<span>Github</span>
							</a>
						</li>
						<li>
							<a href="mailto:bloyce1990@gmail.com">
								<img src={mail} alt="envelope icon" />
								<span>Email</span>
							</a>
						</li>
						<li>
							<a
								href="https://www.linkedin.com/in/andrew-bloyce/"
							>
								<img src={linkedIn} alt="Linked In Icon" />
								<span>Linked In</span>
							</a>
						</li>
						<li>
							<a href="https://twitter.com/bloycey">
								<img src={twitter} alt="Twitter logo" />
								<span>Twitter</span>
							</a>
						</li>
						<li>
							<a href="https://andrewbloyce.com">
								<img src={globe} alt="Globe Icon for website" />
								<span>Website</span>
							</a>
						</li>
					</ul>
				</div>
			</aside>
		</div>
	</div>
</BaseLayout>

<style>
	html.dark svg path {
		stroke: var(--bright);
	}
	.about-wrapper {
		display: flex;
		flex-direction: column;
		margin-bottom: 1rem;
	}

	.content {
		margin-top: 2rem;
		flex: 1;
	}

	.magic-grid > * {
		grid-column: 2;
	}

	.about-header .portrait {
		border-radius: 50%;
		width: 200px;
		margin: 0 auto;
		border: 12px solid var(--white);
		transform: translateY(50%);
	}

	.about-info {
		padding: 1.5rem;
		background-color: var(--red);
		color: #ffffff;
		border: 6px solid var(--red);
		border-radius: 12px;
		margin-bottom: 2rem;
		padding-top: 100px;
		text-align: center;
	}

	.about-info ul {
		margin-bottom: 0;
		padding: 0;
		list-style: none;
		display: inline-flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.5rem;
		font-size: 1.25rem;
	}

	.about-info a {
		display: inline-flex;
		align-items: center;
		gap: 1rem;
		color: #ffffff;
		transition: all 0.3s ease;
	}

	.about-info a:hover {
		transform: translateY(-0.18rem);
	}

	h1 {
		margin-top: 4rem;
		margin-bottom: 0.5rem;
		font-size: 2rem;
	}

	aside {
		margin-top: -5rem;
	}

	@media (min-width: 767px) {
		aside {
			margin-top: 0;
		}

		.about-wrapper {
			flex-direction: row;
			gap: 2rem;
		}

		.about-info ul {
			font-size: 0.75rem;
		}

		.about-wrapper {
			margin-bottom: 4rem;
		}
	}
</style>

<style is:global>
	.content p {
		margin-bottom: 1.5rem;
	}
</style>
