<footer>
	<section class="subscribe-wrapper">
		<div class="container text-center">
			<div class="subscribe-header">
				<div class="main-title">
					<h3>There's more where that came from...</h3>
					<p class="subscribe-subtitle">
						Get an email roughly once a month
					</p>
				</div>
				<p class="subscribed-msg">üéâ You've been subscribed!</p>
			</div>
			<form id="subscribe-form" name="subscribe" data-netlify="true">
				<fieldset>
					<label for="name-field">Name:</label>
					<input
						type="text"
						name="name"
						required="true"
						id="name-field"
						placeholder="Colonel Mustard"
					/>
				</fieldset>
				<fieldset class="visually-hidden">
					<label for="last-name-subscribe-field">Last Name:</label>
					<input
						type="text"
						id="last-name-subscribe-field"
						name="last_name"
						autocomplete="off"
						tabindex="-1"
					/>
				</fieldset>
				<fieldset>
					<label for="email-field">Email:</label>
					<input
						type="email"
						name="email"
						id="email-field"
						required="true"
						placeholder="thecolonel@mustard.com"
					/>
				</fieldset>
				<input type="submit" value="Subscribe" />
			</form>
		</div>
	</section>
</footer>

<style>
	:focus-visible {
		outline: white 2px solid;
	}
	.subscribe-wrapper {
		background-color: var(--red);
		color: #ffffff;
		padding: 2rem 0;
	}

	.subscribe-subtitle {
		margin-bottom: 1rem;
		font-weight: 300;
	}

	#subscribe-form {
		display: flex;
		align-items: flex-end;
		justify-content: center;
		gap: 0.5rem;
		flex-direction: column;
	}

	.subscribe-header {
		position: relative;
		height: 90px;
	}

	@media (min-width: 767px) {
		.subscribe-header {
			height: 150px;
		}

		.subscribe-subtitle {
			font-size: 0.75rem;
		}
	}

	.subscribe-header .main-title,
	.subscribe-header .subscribed-msg {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		transition: opacity 1s ease;
	}

	.subscribe-header .main-title {
		opacity: 1;
	}

	.subscribe-header.subscribed .main-title {
		opacity: 0;
	}

	.subscribe-header.subscribed .subscribed-msg {
		opacity: 1;
	}

	.subscribed-msg {
		opacity: 0;
	}

	#subscribe-form > * {
		width: 100%;
	}

	.subscribe-wrapper input[type="text"],
	.subscribe-wrapper input[type="email"] {
		height: 2.5rem;
		border: none;
		box-shadow: none;
		padding: 0.5rem;
		font-size: 1rem;
	}

	.subscribe-wrapper input[type="submit"] {
		background-color: #ff6b86;
		border: none;
		box-shadow: none;
		padding: 0.5rem 1rem;
		color: #ffffff;
		height: 2.5rem;
		font-size: 1rem;
	}

	.subscribe-wrapper input[type="submit"][loading="true"] {
		cursor: not-allowed;
		position: relative;
		animation: loading 5s linear infinite;
		background-image: linear-gradient(
			45deg,
			#ff6b86 25%,
			#f5a098 25%,
			#f5a098 50%,
			#ff6b86 50%,
			#ff6b86 75%,
			#f5a098 75%,
			#f5a098 100%
		);
		background-size: 0.75rem 0.75rem;
	}

	@keyframes loading {
		from {
			background-position: 0 0;
		}
		to {
			background-position: 100% 0;
		}
	}

	@media (min-width: 767px) {
		.subscribe-wrapper input[type="text"],
		.subscribe-wrapper input[type="email"] {
			height: 2rem;
			font-size: 0.75rem;
		}

		#subscribe-form {
			flex-direction: row;
		}
		.subscribe-wrapper input[type="submit"] {
			height: 2rem;
			font-size: 0.75rem;
		}
	}

	.subscribe-wrapper input[type="submit"]:hover {
		filter: brightness(90%);
		cursor: pointer;
	}

	.footer-bottom {
		background-color: #ffffff;
		padding: 0.5rem 0.75rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.footer-bottom ul {
		margin: 0;
	}

	.footer-bottom ul li {
		display: inline-block;
		list-style: none;
		margin-left: 0.25rem;
	}

	.footer-bottom ul li img {
		transition: all 0.3s ease;
	}
	.footer-bottom ul li img:hover {
		transform: translateY(-4px);
		transition: all 0.3s ease;
	}

	.name {
		font-size: 0.5rem;
		color: #999999;
	}
</style>

<script>
	const subscribeForm = document.getElementById("subscribe-form");
	const subscribeHeader = document.querySelector(".subscribe-header");
	const successfulSubscribeMsg = document.querySelector(".subscribed-msg");
	const subscribeBtn = subscribeForm.querySelector("input[type='submit']");

	subscribeForm.addEventListener("submit", async event => {
		event.preventDefault();
		subscribeBtn.setAttribute("loading", "true");
		subscribeBtn.value = "doing some magic...";

		const formData = Object.fromEntries(new FormData(subscribeForm));

		await fetch("/.netlify/functions/add-subscriber", {
			method: "POST",
			body: JSON.stringify({
				name: formData.name,
				email: formData.email,
				last_name: formData.last_name
			})
		}).then(response => response.json());

		subscribeBtn.setAttribute("loading", "false");
		subscribeBtn.value = "Subscribe";

		// No matter what we show the success state, even if we've blocked a scammer with the honeypot.
		subscribeForm.reset();
		subscribeHeader.classList.add("subscribed");
		setTimeout(() => {
			subscribeHeader.classList.remove("subscribed");
		}, 3000);
		const jsConfetti = new JSConfetti();
		jsConfetti.addConfetti({
			emojis: ["üéâ", "ü¶Ñ", "üê∏", "‚ú®", "üòÆ", "üçÑ"]
		});
		successfulSubscribeMsg.classList.remove("display-none");
	});
</script>
